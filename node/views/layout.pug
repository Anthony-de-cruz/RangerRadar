            a#accountNav.nav-item(href='/account') Account
            a#registerNav.nav-item(href='/register') Register
            a#logoutNav.nav-item(href='/logout') Logout
          else 
            a#loginNav.nav-item(href='/login') Login
    block content
    script.
      window.selectedNav = !{JSON.stringify(selectedNav)};
      !{selectedNav}.style.color = "red"
      !(src='/javascripts/layout.js')