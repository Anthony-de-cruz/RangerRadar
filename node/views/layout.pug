  body
    nav.navbar
        a.logo.nav-item(href='/') Ranger Radar
        .nav-links
          a#reportNav.nav-item(href='/report') Report
          a#mapNav.nav-item(href='/') Map
          a#livefeedNav.nav-item(href='/livefeed') Live Feed
          a#tutorialNav.nav-item(href='/tutorial') Tutorial
